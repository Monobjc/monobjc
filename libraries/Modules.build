      <include name="${base.dir}/${lib.name}/QuartzCore_Extensions/*.cs"/>
      <include name="${base.dir}/${lib.name}/QuartzCore_Functions/*.cs"/>
      <include name="${base.dir}/${lib.name}/QuartzCore_P/*.cs"/>
