      <include name="${base.dir}/${lib.name}/CoreLocation_C/*.cs"/>
      <include name="${base.dir}/${lib.name}/CoreLocation_P/*.cs"/>
      <include name="${base.dir}/${lib.name}/CoreLocation_S/*.cs"/>
      <include name="${base.dir}/${lib.name}/CoreLocation_T/*.cs"/>
